<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrentvilla"
    tools:context=".tenantpage">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="WELCOME"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Addv"
        android:layout_width="187dp"
        android:layout_height="59dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/white"
        android:text="ADD VILLA"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deletev"
        android:layout_width="212dp"
        android:layout_height="64dp"
        android:layout_marginTop="224dp"
        android:backgroundTint="@color/white"
        android:text="DELETE VILLA"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updatelpdate"
        android:layout_width="261dp"
        android:layout_height="81dp"
        android:layout_marginTop="316dp"
        android:backgroundTint="@color/white"
        android:text="UPDATE LAST PAYMENT DATE"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/searchv"
        android:layout_width="225dp"
        android:layout_height="71dp"
        android:layout_marginTop="440dp"
        android:backgroundTint="@color/white"
        android:text="SEARCH VILLA"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/logout"
        android:layout_width="155dp"
        android:layout_height="56dp"
        android:layout_marginTop="560dp"
        android:backgroundTint="@color/white"
        android:text="LOG OUT"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/exit"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_marginTop="644dp"
        android:backgroundTint="@color/white"
        android:text="CLOSE APPLICATION"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>